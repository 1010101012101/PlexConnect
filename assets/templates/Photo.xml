<atv>
  <body>
    <mediaBrowser id="browser" gridLayout="mixed">
      <header>
        <headerWithCountAndButtons>
          <title>{{VAL(title1)}}</title>
          <count>{{VAL(size)}}</count>
          <buttons>
            <actionButton id="slideshow" onSelect="onSettingsSelection()" onPlay="onSlideshowStart()">
              <title>SlideShow</title>
            </actionButton>
          </buttons>
        </headerWithCountAndButtons>
      </header>
      <items>
        <photo id="{{VAL(key)}}"
              onPlay="atv.loadURL({{URL(key)}})"
              onSelect="atv.loadURL({{URL(key)}})">
          {{COPY(Photo)}}
          <assets>
            <photoAsset width="486" height="720" src="{{URL(thumb)}}"/>
          </assets>
        </photo>
      </items>
    </mediaBrowser>
  </body>
</atv>
