<atv>
  <body>
    <listWithPreview id="com.sample.menu-items-with-sections">
      <header>
        <simpleHeader>
          <title>{{VAL(title1)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.sessionStorage['ratingKey']='{{VAL(ratingKey)}}';atv.sessionStorage['duration']='{{VAL(duration)}}';atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=Play')"
                                       onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=MoviePrePlay')">
                {{COPY(Video)}}
                <label>{{VAL(grandparentTitle)}}</label>
                <label2>{{episodestring(parentIndex:0:index:0:title:"default")}}</label2>
                <image>http://{{ADDR_PMS()}}{{ADDPATH(grandparentThumb)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <keyedPreview>
                    <title>{{VAL(title)}}</title>
                    <summary>{{VAL(summary)}}</summary>
                    <image>http://{{ADDR_PMS()}}{{ADDPATH(thumb)}}</image>
                  </keyedPreview>
                </preview>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
