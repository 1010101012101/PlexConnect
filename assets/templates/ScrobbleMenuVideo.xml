<?xml version="1.0" encoding="UTF-8"?> 
<atv> 
  <head> 
    <script src="{{URL(:/js/utils.js)}}"/> 
  </head> 
  
  <body> 
    <optionDialog id="scrobble.optionDialog">
      <header>
        <simpleHeader>
          <title>{{VAL(Video/title)}}</title>
          <subtitle>{{VAL(Video/grandparentTitle)}}</subtitle>
        </simpleHeader>
      </header> 
      
      <menu>
        <sections>
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title></title>
              </horizontalDivider>
            </header>
            
            <items>
              <oneLineMenuItem id="item2" onSelect="scrobble('{{VAL(%baseURL)}}', '{{VAL(%accesstoken)}}', '{{VAL(Video/ratingKey)}}');atv.unloadPage();">
                <label>{{TEXT(Mark as Watched)}}</label>
              </oneLineMenuItem>
        
              <oneLineMenuItem id="item3" onSelect="unscrobble('{{VAL(%baseURL)}}', '{{VAL(%accesstoken)}}', '{{VAL(Video/ratingKey)}}');atv.unloadPage();">
                <label>{{TEXT(Mark as Unwatched)}}</label>
              </oneLineMenuItem>
        
              <oneLineMenuItem id="item4" onSelect="atv.loadURL('{{URL(Video/key)}}&amp;PlexConnect=ChangeSingleArtworkVideo')">
                <label>{{TEXT(Change Artwork)}}</label>
              </oneLineMenuItem>
            </items>

          </menuSection>
        </sections>
      </menu>
    </optionDialog>
  </body>
</atv>
