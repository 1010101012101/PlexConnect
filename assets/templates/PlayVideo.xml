<atv>
  <body>
    <videoPlayer id="com.sample.video-player">
      <httpFileVideoAsset id="{{VAL(Video/key)}}">
        <mediaURL>http://{{ADDR_PMS}}{{VAL(Video/Media/Part/key}}</mediaURL>
        <title>{{VAL(Video/title)}}</title>
        <description>{{VAL(Video/summary)}}</description>
        <bookmarkTime>{{VALMATH(Video/viewOffset:1000:/1000)}}</bookmarkTime>
        <image>http://{{ADDR_PMS}}{{VAL(Video/thumb)}}</image>
      </httpFileVideoAsset>
    </videoPlayer>
  </body>
</atv>
