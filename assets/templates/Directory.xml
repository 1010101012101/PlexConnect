<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <listWithPreview id="com.sample.menu-items-with-sections">
    {{CUT(size:CUT:0=CUT|1=)}}
      <header>
        <simpleHeader>
          <title>{{VAL(title1:Plex Library)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>

              <!-- Directory -->
              <!-- viewgroup="secondary" -->
              <!-- content="", "secondary", "items" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
              {{CUT(viewGroup::=|album=CUT|album =)}}
              {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <preview>
                  <link>{{URL(key)}}/recentlyAdded?stack=1&amp;X-Plex-Container-Start=0&amp;X-Plex-Container-Size=20&amp;PlexConnect=SectionPreview-{{VAL(type)}}</link>{{CUT(type::a=|photo=CUT|q=)}}
                  <link>{{URL(key)}}/recentlyAdded?X-Plex-Container-Start=0&amp;X-Plex-Container-Size=20&amp;PlexConnect=SectionPreview-{{VAL(type)}}</link>{{CUT(type:CUT:a=CUT|photo=|q=CUT)}}
                </preview>{{CUT(@main/viewGroup:CUT:=|artist=CUT|artist =)}}
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>{{CUT(@main/viewGroup::=CUT|artist=|artist =CUT)}}
              </oneLineMenuItem>
              
              <!-- Directory -->
              <!-- viewgroup="album" -->
              <!-- content="Directory" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
              {{CUT(viewGroup:CUT:=CUT|album=|album =CUT)}}
              {{COPY(Directory:/viewGroup::=|album=COPY|album =)}}
                <label>{{VAL(title)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Artist -->
              <!-- viewgroup="secondary" -->
              <!-- content="artists" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Artist)}}
                <label>{{VAL(artist)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Album -->
              <!-- viewgroup=missing, "album" -->
              <!-- content="albums" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Album)}}
                <label>{{VAL(label)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Track (single, aTVFirmware<7, iOS<8)-->
              <!-- audio V1 - channels (old style plugin, eg iTunes) -->
              <!-- viewgroup="track" -->
              <!-- content="songs" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL())}}&amp;PlexConnect=PlayAudio_plist:Single:{{VAL(ratingKey)}}:')"
                                       onSelect="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio_plist:Single:{{VAL(ratingKey)}}:')">
              {{CUT(^aTVFirmwareVersion:CUT:=|7=CUT)}}  <!-- watch out: this will make trouble with iOS10 -->
              {{COPY(Track:/content::=|songs=COPY|songs =)}}
                <label>{{VAL(track)}}</label>
                <ordinal>{{VAL(index)}}</ordinal>{{CUT(index:CUT:0=CUT|0 =)}}
                <maxOrdinalDigits>2</maxOrdinalDigits>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(/thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- audio V2 - library -->
              <!-- viewgroup="track" -->
              <!-- content n/a -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio_plist:Single:{{VAL(ratingKey)}}:')"
                                       onSelect="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio_plist:Single:{{VAL(ratingKey)}}:')">
              {{CUT(^aTVFirmwareVersion:CUT:=|7=CUT)}}
              {{COPY(Track:/content:COPY:=)}}
                <label>{{VAL(title)}}</label>
                <ordinal>{{VAL(index)}}</ordinal>{{CUT(index:CUT:0=CUT|0 =)}}
                <maxOrdinalDigits>2</maxOrdinalDigits>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(/thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Track (playlist, aTVFirmware>=7, iOS>=8)-->
              <!-- audio V1 - channels (old style plugin, eg iTunes) -->
              <!-- viewgroup="track" -->
              <!-- content="songs" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio:Continuous:{{VAL(ratingKey)}}:{{VAL(#copy_ix)}}')"
                                       onSelect="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio:Single:{{VAL(ratingKey)}}:')">
              {{CUT(^aTVFirmwareVersion::=CUT|7=)}}
              {{COPY(Track:/content::=|songs=COPY|songs =)}}
                <label>{{VAL(track)}}</label>
                <ordinal>{{VAL(index)}}</ordinal>{{CUT(index:CUT:0=CUT|0 =)}}
                <maxOrdinalDigits>2</maxOrdinalDigits>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(/thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
              
              <!-- audio V2 - library -->
              <!-- viewgroup="track" -->
              <!-- content n/a -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL()}}&amp;PlexConnect=PlayAudio:Continuous:{{VAL(ratingKey)}}:{{VAL(#copy_ix)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=PlayAudio:Single:{{VAL(ratingKey)}}:0')">
              {{CUT(^aTVFirmwareVersion::=CUT|7=)}}
              {{COPY(Track:/content:COPY:=)}}
                <label>{{VAL(title)}}</label>
                <ordinal>{{VAL(index)}}</ordinal>{{CUT(index:CUT:0=CUT|0 =)}}
                <maxOrdinalDigits>2</maxOrdinalDigits>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(/thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Playlist -->
              <!-- viewgroup="playlist" -->
              <!-- content="playlists" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Playlist)}}
                <label>{{VAL(title)}}</label>
                <rightLabel>{{VAL(count)}}</rightLabel>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

              <!-- Genre -->
              <!-- viewgroup="genre" -->
              <!-- content="genres" -->
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Genre)}}
                <label>{{VAL(genre)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>

            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>

    <!--No Items Available-->
    <dialog id="com.sample.error-dialog">
    {{CUT(size::0=|1=CUT)}}
      <title>PlexConnect</title>
      <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
    </dialog>
  </body>
</atv>
