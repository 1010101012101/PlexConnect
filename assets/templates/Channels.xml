<atv>
  <body>
    {{ADDXML(/video:VideoChannels)}}
    {{ADDXML(/music:AudioChannels)}}
    {{ADDXML(/photos:PhotoChannels)}}
    <listWithPreview id="com.sample.menu-items-with-sections">
      <header>
        <simpleHeader>
          <title>{{VAL(title1:Plex Channels)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <!--Video Channels-->
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>Video</title>
              </horizontalDivider>
            </header> 
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=ChannelsVideo')" 
                                       onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}&amp;PlexConnect=ChannelsVideo')">
                {{CUT(@VideoChannels/size:CUT:0=CUT|1=)}}
                {{COPY(@VideoChannels/Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(thumb)}}</image>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              <twoLineEnhancedMenuItem id="noVideoChannels" dimmed="true">
                {{CUT(@VideoChannels/size::0=|1=CUT)}}
                <label>no video channels</label>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
          <!--Audio Channels-->
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>Audio</title>
              </horizontalDivider>
            </header> 
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')" 
                                       onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')">
                {{CUT(@AudioChannels/size:CUT:0=CUT|1=)}}
                {{COPY(@AudioChannels/Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(thumb)}}</image>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              <twoLineEnhancedMenuItem id="noAudioChannels" dimmed="true">
                {{CUT(@AudioChannels/size::0=|1=CUT)}}
                <label>no audio channels</label>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
          <!--Photo Channels-->
          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>Photo</title>
              </horizontalDivider>
            </header> 
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" 
                                       onPlay="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')" 
                                       onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')">
                {{CUT(@PhotoChannels/size:CUT:0=CUT|1=)}}
                {{COPY(@PhotoChannels/Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(thumb)}}</image>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              <twoLineEnhancedMenuItem id="noPhotoChannels" dimmed="true">
                {{CUT(@PhotoChannels/size::0=|1=CUT)}}
                <label>no photo channels</label>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>