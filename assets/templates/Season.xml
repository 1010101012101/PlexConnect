<atv>
  <body>
    <listWithPreview id="com.sample.menu-items-with-sections">
      <header>
        <simpleHeader>
          <title>{{VAL(title2)}}</title>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}" onPlay="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')" onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(key)}}')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <rightLabel>{{VAL(leafCount)}} Episodes</rightLabel>
                <image>http://{{ADDR_PMS()}}{{ADDPATH(thumb)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <crossFadePreview>
                    <image>http://{{ADDR_PMS()}}{{ADDPATH(thumb)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
