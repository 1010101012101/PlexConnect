<atv>
  <body>
    <listWithPreview id="com.sample.menu-items-with-sections">
      <header>
        <simpleHeader>
          <title>{{VAL(attrib:title1)}}</title>
          <subtitle>{{VAL(attrib:title2)}}</subtitle>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(attrib:key)}}" onPlay="atv.loadURL('http://trailers.apple.com{{ADDPATH(attrib:key)}}&amp;PlexConnect=Play')" onSelect="atv.loadURL('http://trailers.apple.com{{ADDPATH(attrib:key)}}&amp;PlexConnect=Play')">
                {{COPY(tag:Video)}}
                <label>{{VAL(attrib:title)}}</label>
                <ordinal>{{VAL(attrib:index)}}</ordinal>
                <maxOrdinalDigits>2</maxOrdinalDigits>
                <image>http://{{ADDR_PMS}}{{ADDPATH(attrib:thumb)}}</image>
                <defaultImage>resource://16X9.png</defaultImage>
                <preview>
                  <keyedPreview>
                    <title>{{VAL(attrib:preview,keyedPreview,title)}}</title>
                    <summary>{{VAL(attrib:preview,keyedPreview,summary)}}</summary>
                    <image>http://{{ADDR_PMS}}{{VAL(attrib:preview,keyedPreview,thumb)}}</image>
                  </keyedPreview>
                </preview>
              </twoLineEnhancedMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
